  font-family: "pilowlava-regular";
  src: url("3b9ab7a2452de0a92f5eb34408c8e7b3") format("woff2"), url("cc16c6ced2f92af38964ac333cc95765") format("woff");
  font-style: normal;
  font-weight: normal;
}

